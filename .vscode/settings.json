{
    // Editor configuration
    "workbench.colorTheme": "Default Dark Modern",
    "editor.inlineSuggest.enabled": true,
    "editor.suggest.showMethods": true,
    "editor.suggest.preview": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.snippetSuggestions": "top",

    // Files configuration
    "files.autoSaveDelay": 1000,
    "files.autoSave": "afterDelay",

    // Git configuration
    "git.autofetch": true,
    "git.confirmSync": false,
    "diffEditor.ignoreTrimWhitespace": false,

    // GitHub configuration
    "githubPullRequests.pullBranch": "never",
    "redhat.telemetry.enabled": false,
    "window.zoomLevel": 1,

    // Jupyter configuration
    "jupyter.askForKernelRestart": false,
    "notebook.output.textLineLimit": 1000,

    // Extensions configuration
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "cursor.cpp.disabledLanguages": ["scminput"],

    // SSH configurations
    "remote.SSH.connectTimeout": 60,
    "remote.SSH.defaultExtensions": ["gitpod.gitpod-remote-ssh"],    

    // Terminal configuration
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.inheritEnv": false,

    // Vim extension configuration
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.vimrc",
    "vim.leader": "<space>",
    "vim.timeout": 500,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.smartRelativeLine": true,
    // Editor settings (from .vimrc)
    // These are not supported by the Vim extension yet
    // so we need to set them manually.
    "editor.lineNumbers": "relative",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.autoIndent": "advanced",
    "[python]": {
        "editor.tabSize": 4
    },

    // LaTeX configuration
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "/Library/TeX/texbin/latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%/PDF",
                "%DOC%"
            ],
            "env": {
                "PATH": "/Library/TeX/texbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
            }
        }
    ]
}
