{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=88", "--select=C,E,F,W,B", "--extend-ignore=B009,E203,E501,W503"],
    "python.autoComplete.extraPaths": [".venv/lib/python${env:PYTHON_VER}/site-packages"],
    "python.analysis.extraPaths": [".venv/lib/python${env:PYTHON_VER}/site-packages"],
    "python.testing.pytestPath": ".venv/bin/pytest"
}